<div class="testimonials-section page-width scroll-trigger animate--slide-in">
  <h2 class="h1 center">{{ section.settings.heading | escape }}</h2>
  <div class="testimonials-grid">
    {%- for block in section.blocks -%}
      <div class="testimonial-card">
        <blockquote class="testimonial-quote">
          {{ block.settings.quote }}
        </blockquote>
        <div class="testimonial-meta">
          <div class="testimonial-image-wrapper">
             {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 200 | image_tag: 
                 class: 'testimonial-image paste-image',
                 widths: '100, 200',
                 loading: 'lazy'
              }}
            {%- else -%}
              <!-- Default asset image -->
              <img src="{{ 'customer_review.jpg' | asset_url }}" alt="Customer Review" class="testimonial-image" width="100" height="100" loading="lazy">
            {%- endif -%}
          </div>
          <div class="testimonial-author-info">
            <cite class="testimonial-author">{{ block.settings.author | escape }}</cite>
            <span class="testimonial-role">{{ block.settings.role | escape }}</span>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

<style>
  .testimonials-section {
    padding-top: 60px;
    padding-bottom: 60px;
    text-align: center;
  }

  .testimonials-section h2 {
    margin-bottom: 50px;
    font-size: 3.6rem;
    font-weight: 700;
  }

  .testimonials-grid {
    display: flex;
    justify-content: center;
    gap: 80px; /* Generous spacing between columns */
    max-width: 1200px;
    margin: 0 auto;
    flex-wrap: wrap;
  }

  .testimonial-card {
    flex: 1;
    min-width: 300px; /* Ensure they don't get too squished */
    max-width: 500px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .testimonial-quote {
    font-size: 1.6rem;
    line-height: 1.6;
    color: #64748B; /* Slate gray text */
    margin: 0 0 30px 0;
    font-style: normal; /* Text in image is normal, not italic, or maybe slight */
    border: none;
    padding: 0;
  }

  .testimonial-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }

  .testimonial-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%; /* Circle shape */
    display: block;
  }

  .placeholder-image {
    width: 100px;
    height: 100px;
    background-color: #e2e8f0;
    border-radius: 50%;
  }

  .testimonial-author-info {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .testimonial-author {
    font-weight: 700;
    font-size: 1.8rem;
    font-style: normal;
    color: #000000;
  }

  .testimonial-role {
    font-size: 1.4rem;
    color: #64748B;
  }
  
  /* Responsive */
  @media screen and (max-width: 768px) {
    .testimonials-grid {
      flex-direction: column;
      gap: 50px;
    }
    
    .testimonials-section h2 {
      font-size: 2.8rem;
    }
  }
</style>

{% schema %}
