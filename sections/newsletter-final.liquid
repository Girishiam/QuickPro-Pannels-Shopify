<section class="newsletter-custom">
  <div class="container">
    <div class="newsletter-wrapper">
      
      <div class="newsletter-content">
        <h2>{{ section.settings.heading }}</h2>
      </div>

      <div class="newsletter-form-container">
        {% form 'customer' %}
          {{ form.errors | default_errors }}
          {% if form.posted_successfully? %}
            <p class="success-msg">Thanks for joining!</p>
          {% else %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            
            <div class="input-row">
              <div class="input-group">
                <label>Full Name *</label>
                <input type="text" name="contact[first_name]" placeholder="Full Name" required>
              </div>
              <div class="input-group">
                <label>Email *</label>
                <input type="email" name="contact[email]" placeholder="Email" required>
              </div>
            </div>

            <div class="consent-group">
              <input type="checkbox" id="consent" name="customer[accepts_marketing]" required>
              <label for="consent">
                {{ section.settings.consent_text }}
              </label>
            </div>

            <button type="submit" class="submit-btn">{{ section.settings.button_label }}</button>
          {% endif %}
        {% endform %}
      </div>

    </div>
  </div>
</section>

<style>
.newsletter-custom {
  background-color: {{ section.settings.bg_color }}; /* The exact gray from your image */
  color: #ffffff;
  padding: 80px 20px;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

.newsletter-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
}

.newsletter-content h2 {
  font-size: 48px;
  font-weight: 800;
  line-height: 1.1;
  max-width: 500px;
  margin: 0;
  text-transform: uppercase;
  color: #ffffff;
}

.newsletter-form-container {
  flex: 1;
  max-width: 600px;
}

.input-row {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
}

.input-group {
  flex: 1;
}

.input-group label {
  display: block;
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 8px;
  color: #ffffff;
}

.input-group input {
  width: 100%;
  padding: 12px;
  border: none;
  border-radius: 4px;
  box-sizing: border-box; /* Ensuring padding doesn't overflow */
}

.consent-group {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  margin-bottom: 30px;
}

.consent-group label {
  font-size: 12px;
  line-height: 1.4;
  color: #ffffff;
}

.submit-btn {
  background-color: #ffffff;
  color: #000000;
  border: none;
  padding: 15px 50px; /* Smaller padding */
  font-weight: bold;
  text-transform: uppercase;
  border-radius: 6px;
  cursor: pointer;
  display: block;
  margin: 0 auto;
  width: auto; /* Removed full width */
  min-width: 200px;
}

/* Responsive adjustment for Mobile */
@media (max-width: 900px) {
  .newsletter-wrapper {
    flex-direction: column;
    text-align: center;
  }
  .input-row {
    flex-direction: column;
  }
  .newsletter-content h2 {
    font-size: 32px;
  }
}
</style>

{% schema %}
{
  "name": "Final Newsletter",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "READY TO RECEIVE OUR NEWSLETTER? JOIN NOW!",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Submit",
      "label": "Button Label"
    },
    {
      "type": "text",
      "id": "consent_text",
      "default": "By checking this box, I consent to receive marketing and promotional messages, including special offers, discounts, new product updates among others. Message frequency may vary. Message & Data rates may apply. Reply HELP for help or STOP to opt-out.",
      "label": "Consent Text"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#6d6d6d"
    }
  ],
  "presets": [
    {
      "name": "Final Newsletter"
    }
  ]
}
{% endschema %}
