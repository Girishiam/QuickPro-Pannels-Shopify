<div class="trailer-attachments-section page-width section-{{ section.id }}-padding">
  <div class="trailer-attachments-container">
    <h3 class="trailer-heading">Trailer Attachments</h3>
    <ul class="trailer-list">
      {%- for block in section.blocks -%}
        <li {{ block.shopify_attributes }}>
          <strong>{{ block.settings.title }}</strong> {{ block.settings.text }}
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

<style>
  .trailer-attachments-section {
    padding-top: 30px;
    padding-bottom: 60px;
    background-color: #ffffff;
  }

  .trailer-attachments-container {
    max-width: 1000px;
    margin: 0 auto;
    border: 2px solid #000000; /* Distinct border as per image */
    padding: 40px;
    border-radius: 4px; /* Slight radius for polish, though image is sharp */
    background: #fff;
  }

  .trailer-heading {
    font-size: 2.2rem;
    font-weight: 900;
    margin-bottom: 20px;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .trailer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .trailer-list li {
    font-size: 1.6rem;
    color: #333;
    margin-bottom: 12px;
    line-height: 1.5;
    position: relative;
    padding-left: 20px;
  }

  .trailer-list li::before {
    content: '-';
    position: absolute;
    left: 0;
    color: #333;
    font-weight: bold;
  }

  .trailer-list strong {
    font-weight: 800;
    color: #000;
  }
  
  .trailer-list a {
    color: #000;
    text-decoration: underline;
    transition: color 0.2s;
  }
  
  .trailer-list a:hover {
    color: #555;
  }

  @media screen and (max-width: 750px) {
    .trailer-attachments-container {
      padding: 20px;
    }
    .trailer-heading {
      font-size: 1.8rem;
    }
  }
</style>

{% schema %}
{
  "name": "Trailer Attachments",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "list_item",
      "name": "List Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Bold Title (e.g. Questions?)",
          "default": "Title"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Description text here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trailer Attachments",
      "blocks": [
        {
          "type": "list_item",
          "settings": {
            "title": "Call our cell:",
            "text": "Be sure to text pictures if you contact us for mounting advice."
          }
        },
        {
          "type": "list_item",
          "settings": {
            "title": "Questions?",
            "text": "I can help brainstorm the best locations to mount them to your trailer."
          }
        },
        {
          "type": "list_item",
          "settings": {
            "title": "Custom Fit:",
            "text": "Every trailer is different, so we recommend contacting us to ensure the best setup."
          }
        }
      ]
    }
  ]
}
{% endschema %}
