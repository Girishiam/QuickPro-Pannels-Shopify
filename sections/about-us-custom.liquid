<div class="about-us-section page-width scroll-trigger animate--slide-in">
  <div class="about-grid">
    <!-- Left Column: Image -->
    <div class="about-image-wrapper">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 800 | image_tag: 
           class: 'about-image',
           widths: '400, 600, 800, 1000',
           loading: 'lazy'
        }}
      {%- else -%}
        <img src="{{ 'about_us.webp' | asset_url }}" alt="About QuickPro Panels" class="about-image" loading="lazy" width="800" height="auto">
      {%- endif -%}
    </div>

    <!-- Right Column: Text Content -->
    <div class="about-content">
      <h4 class="about-subheading">{{ section.settings.subheading | escape }}</h4>
      <h2 class="about-heading">{{ section.settings.heading | escape }}</h2>
      
      <div class="about-features">
        {%- for block in section.blocks -%}
          <div class="feature-item">
            <h3 class="feature-title">
              <span class="bullet-point">â€¢</span> 
              {{ block.settings.title }}
            </h3>
            <div class="feature-description">
              {{ block.settings.text }}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>

  <!-- Bottom Quote Section -->
  <div class="about-quote-container">
    <div class="about-quote-text">
      {{ section.settings.quote_text }}
    </div>
    <div class="about-quote-author">
      - {{ section.settings.quote_author }}
    </div>
  </div>

  <!-- Merged Disclaimer Section for Guaranteed Visibility -->
  <div class="disclaimer-wrapper">
    <div class="disclaimer-box">
      <h2 class="disclaimer-heading">{{ section.settings.disclaimer_heading | escape }}</h2>
      <div class="disclaimer-content">
        {{ section.settings.disclaimer_content }}
      </div>
    </div>
  </div>
</div>

<style>
  .about-us-section {
    padding-top: 60px;
    padding-bottom: 60px;
  }

  .about-grid {
    display: flex;
    gap: 60px;
    align-items: flex-start;
    margin-bottom: 60px;
  }

  .about-image-wrapper {
    flex: 1;
    position: relative;
  }

  .about-image {
    width: 100%;
    height: auto;
    border-radius: 8px; /* Slight radius for premium feel */
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    display: block;
  }

  .about-content {
    flex: 1.2; /* Give text slightly more space */
  }

  .about-subheading {
    font-size: 1.8rem;
    color: #64748B; /* Slate 500 */
    margin-bottom: 10px;
    margin-top: 0;
    font-weight: 500;
  }

  .about-heading {
    font-size: 3.6rem;
    color: var(--color-foreground);
    margin-top: 0;
    margin-bottom: 30px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: -0.5px;
  }

  .feature-item {
    margin-bottom: 25px;
  }

  .feature-title {
    font-size: 1.8rem;
    margin: 0 0 10px 0;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .bullet-point {
    color: #2563EB; /* Blue bullet */
    font-size: 2rem;
    line-height: 1;
  }

  .feature-description ul {
    margin: 0;
    padding-left: 28px;
    list-style-type: disc;
  }

  .feature-description li {
    margin-bottom: 8px;
    color: rgba(var(--color-foreground), 0.8);
    line-height: 1.6;
    font-size: 1.6rem;
  }

  .feature-description li::marker {
    color: #2563EB; /* Blue nested bullets */
  }

  /* Quote Section */
  .about-quote-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    padding: 0 20px;
  }

  .about-quote-text {
    font-style: italic;
    font-size: 1.8rem;
    line-height: 1.7;
    color: rgba(var(--color-foreground), 0.85);
    margin-bottom: 20px;
  }
  
  .about-quote-text p {
    margin: 0; /* Remove default p margins if user adds them */
  }

  .about-quote-author {
    font-weight: 700;
    font-size: 1.6rem;
    color: #1E293B; /* Darker slate */
  }

  /* Responsive */
  @media screen and (max-width: 900px) {
    .about-grid {
      flex-direction: column;
      gap: 30px;
    }
    
    .about-heading {
      font-size: 2.8rem;
    }
  }

  /* Disclaimer Styles Merged */
  .disclaimer-wrapper {
    margin-top: 60px;
    padding: 0 20px;
  }
  
  .disclaimer-box {
    border: 3px solid #000000;
    padding: 40px;
    max-width: 1000px;
    margin: 0 auto;
    background-color: #ffffff;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .disclaimer-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .disclaimer-heading {
    font-size: 2.4rem;
    font-weight: 900;
    margin-top: 0;
    margin-bottom: 20px;
    text-transform: uppercase;
    color: #000000;
  }

  .disclaimer-content ul {
    list-style-type: none;
    padding-left: 0;
    margin: 0;
  }

  .disclaimer-content p {
    margin: 0 0 10px 0;
    font-size: 1.6rem;
    line-height: 1.5;
    color: #000000;
  }
  
  .disclaimer-content li {
    margin-bottom: 12px;
    font-size: 1.6rem;
    line-height: 1.5;
    color: #000000;
    position: relative;
    padding-left: 15px;
  }

  .disclaimer-content li::before {
    content: "-";
    position: absolute;
    left: 0;
  }

  @media screen and (max-width: 768px) {
    .disclaimer-box {
      padding: 20px;
      border-width: 2px;
    }
  }
</style>

